<Application x:Class="XDeploy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:XDeploy">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:AppBootstrapper x:Key="Bootstrapper" />
                    <HasErrorsToBrushConverter x:Key="HasErrorsToBrushConverter" />
                    <InvertableBooleanToVisibilityConverter x:Key="InvertableBooleanToVisibilityConverter" />
                    <ShortTextConverter x:Key="ShortTextConverter" />
                    <ProcessingStatusToBrushConverter x:Key="ProcessingStatusToBrushConverter" />
                </ResourceDictionary>
                <ResourceDictionary Source="Theme/Common.xaml" />
                <ResourceDictionary Source="Theme/Icons.xaml" />
                <ResourceDictionary Source="Theme/Buttons.xaml" />
                <ResourceDictionary Source="Theme/Messages.xaml" />
                <ResourceDictionary Source="Theme/Form.xaml" />
                <ResourceDictionary Source="Theme/DataList.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
